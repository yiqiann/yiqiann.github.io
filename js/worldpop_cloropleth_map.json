{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "World Population (2022)",
    "width": 800,
    "height": 600,
    "data": {
        "url": "ne_110m",
        "format": {"type": "topojson", "feature": "ne_110m"}
    },
    "transform": [
        {
            "lookup": "properties.NAME",
            "from": {
                "data": {
                "url": "data/world.population.csv"
                },
            "key": "Country",
            "fields": ["Population"]
            }
        },
        {"calculate": "datum.2022Population + 0.1", "as": "Population"}
    ],
    "mark": "geoshape",
    "encoding": {
        "color": {
            "field": "population",
            "type": "quantitative",
            "scale": {"scheme": "viridis"}
        },
        "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Population", "type": "quantitative"}
            ]
    }
    }