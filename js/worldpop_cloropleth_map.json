{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "World Population in 2022",
    "width": 800,
    "height": 600,
    "data": {
        "url": "https://raw.githubusercontent.com/yiqiann/yiqiann.github.io/main/js/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m"}
    },
    "projection": {"type": "equalEarth"},
    "transform": [
        {
            "lookup": "properties.NAME",
            "from": {
                "data": {
                "url": "https://raw.githubusercontent.com/yiqiann/yiqiann.github.io/main/data/world_population.csv"
                },
            "key": "Country",
            "fields": ["2022Population"]
            }
        },
        {"calculate": "datum.2022Population", "as": "Population"}
    ],
    "mark": "geoshape",
    "encoding": {
        "color": {
            "field": "Population",
            "type": "quantitative",
            "scale": {"scheme": "viridis"}
        },
        "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "Population", "type": "quantitative"}
            ]
    }
    }